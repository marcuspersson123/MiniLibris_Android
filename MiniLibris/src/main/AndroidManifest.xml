<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.webbdev.minilibris" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="webbdev.me.minilibris.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="webbdev.me.minilibris.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.webbdev.minilibris.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="me.webbdev.minilibris.database.MiniLibrisContentProvider"
            android:authorities="me.webbdev.minilibris.contentprovider" >
        </provider>

        <receiver
            android:name="me.webbdev.minilibris.services.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="webbdev.me.minilibris" />
            </intent-filter>
        </receiver>

        <service android:name="me.webbdev.minilibris.services.GcmIntentService" />
        <service android:name="me.webbdev.minilibris.services.SyncDatabaseIntentService" />
        <service android:name="me.webbdev.minilibris.services.ReserveIntentService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="me.webbdev.minilibris.ui.BookDetailActivity"
            android:label="@string/title_activity_book_detail" >
        </activity>
    </application>

</manifest>
